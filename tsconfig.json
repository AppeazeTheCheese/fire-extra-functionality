{
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM", "DOM.iterable", "es2020"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noErrorTruncation": true,
    "downlevelIteration": true,
    "removeComments": true,
    "outDir": "dist"
  }
}
